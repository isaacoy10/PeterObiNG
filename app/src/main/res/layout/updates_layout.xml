<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_gravity="center"
    android:layout_marginHorizontal="10dp"
    android:elevation="10dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="40dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/update_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp"
                app:cardElevation="10dp"
                android:elevation="10dp"
                android:translationZ="10dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/update_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:elevation="10dp"
                    android:translationZ="10dp"/>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="start|center"
                android:layout_marginVertical="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/update_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="News Update Title"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/update_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:textColor="@color/gray0"
                    android:textStyle="italic"
                    android:maxLines="2"
                    android:text="News Update TitleNews Update TitleNews Update TitleNews Update TitleNews Update TitleNews Update TitleNews Update TitleNews Update TitleNews Update TitleNews Update TitleNews Update TitleNews Update TitleNews Update TitleNews Update TitleNews Update Title"
                    android:requiresFadingEdge="vertical"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12.5sp"
                    android:textColor="@color/orange"
                    android:layout_marginTop="10dp"
                    android:text="News Update Title"/>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>